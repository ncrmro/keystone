{
  "name": "Keystone Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  
  "hostRequirements": {
    "cpus": 8,
    "memory": "32gb"
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/nix:1": {
      "version": "latest",
      "multiUser": false,
      "extraNixConfig": "experimental-features = nix-command flakes"
    }
  },

  // Configure container settings
  "containerEnv": {
    "NIXPKGS_ALLOW_UNFREE": "1"
  },

  // Use the flake's devShell
  "postCreateCommand": "nix develop --command echo 'Development environment ready'",

  // Set up customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "jnoortheen.nix-ide",
        "bbenoist.nix",
        "arrterian.nix-env-selector"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "nix.enableLanguageServer": true,
        "nix.serverPath": "nil",
        "editor.formatOnSave": true,
        "[nix]": {
          "editor.defaultFormatter": "jnoortheen.nix-ide"
        }
      }
    }
  },

  // Forward SSH port
  "forwardPorts": [22],
  "portsAttributes": {
    "22": {
      "label": "SSH",
      "onAutoForward": "notify"
    }
  },

  // Set the default shell
  "postAttachCommand": "nix develop",

  // Run as the vscode user
  "remoteUser": "vscode",

  // Mount the Nix store as a volume for better performance
  "mounts": [
    "source=nix-store,target=/nix,type=volume"
  ]
}
